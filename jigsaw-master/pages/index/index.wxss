/**index.wxss**/
page{
  height: 100%;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 5%;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 10rpx;
  border-radius: 50%;

}
.userinfo-nickname {
  color: #aaa;
  margin: 0 auto;
}

.usermotto {
  text-align:center;
  color:beige;
  margin-bottom: 100rpx;
}

.readme-text{
  position: relative;
  bottom:-3%;
}

/*字体动画  */
.user-motto1{
  opacity: 0;
  animation: leftRight 2.5s infinite;
  }

@keyframes leftRight {
  40% {
    /* transform: translate(50rpx, 0) scale(.7); */
    opacity: .2;
    color:#a9f;
  }
  60% {
    opacity:.4;
    color:#333;
  }
  80% {
    /* transform: translate(0) scale(2); */
    opacity: .6;
    color:#666;
  }
  100% {
    /* transform: translate(0) scale(1); */
     opacity: .8;
    color:#111;
  }
}